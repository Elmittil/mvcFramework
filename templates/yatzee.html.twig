{% extends "mvc-layout.html.twig" %}

{% block content %}
<div class="game21-wrapper">
    <h1 class="game-title">{{ header }}</h1>

    <form action="{{ app.request.getBaseURL() }}/yatzee/game-setup") method="POST" class="die-choice">
        <div class="radio-b">
            <label for="playername">Players name</label>
            <input type="text" id="playername" name="playername">
        </div>
        <button type="submit" class="new-game-button" name="start" value="Play">Play</button>
    </form>
</div>
{% endblock %}
